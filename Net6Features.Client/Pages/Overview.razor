@page "/overview"
@page "/overview/{data}"

<PageTitle>@Data</PageTitle>

@if (String.IsNullOrWhiteSpace(Data))
{
    <MudAlert Severity="Severity.Warning">
        Warning: Es wurde kein Datentyp übergeben.
    </MudAlert>

}
else
{
    <ErrorBoundary>
        <ChildContent>
            @switch (Data)
            {
                case "Speakers":
                    <Speakers SearchTerm="@SearchTerm" />
                    break;
                case "Conferences":
                    <Conferences SearchTerm="@SearchTerm" />
                    break;
                case "Contributions":
                    <Contributions SearchTerm="@SearchTerm" />
                    break;           
            }
        </ChildContent>
        <ErrorContent>
            <MudAlert Severity="Severity.Error">
                Error: @context.Message
            </MudAlert>
        </ErrorContent>
    </ErrorBoundary>
}

